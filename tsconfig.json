{
  "compilerOptions": {
    "outDir": "./dist/",
    "types": ["node", "jest"],
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["src/*"],
      "@/config/*": ["config/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
